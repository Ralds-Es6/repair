

<div class="main-container">
    <div class="col-lg-6 mx-auto">
        <div class="card">
            <div class="card-header text-center">
                <i class="fas fa-search-location fa-2x mb-2 text-primary"></i>
                <h2>Track Your Repair</h2>
            </div>
            <div class="card-body">
                <% if (typeof error !== 'undefined') { %>
                    <div class="alert alert-danger alert-dismissible fade show">
                        <i class="fas fa-exclamation-circle me-2"></i>
                        <%= error %>
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                <% } %>

                <form action="/track" method="POST" class="needs-validation" novalidate>
                    <div class="mb-4">
                        <label for="ticketId" class="form-label">
                            <i class="fas fa-ticket-alt me-2"></i>Ticket ID
                        </label>
                        <div class="input-group">
                            <span class="input-group-text">
                                <i class="fas fa-hashtag"></i>
                            </span>
                            <input type="text" class="form-control" id="ticketId" name="ticketId" 
                                   placeholder="Enter your ticket ID (e.g., RT2506-1234)" 
                                   pattern="RT\d{4}-\d{4}"
                                   required>
                        </div>
                        <div class="invalid-feedback">
                            <i class="fas fa-info-circle me-1"></i>Please enter a valid ticket ID
                        </div>
                        <small class="text-muted mt-2 d-block">
                            <i class="fas fa-info-circle me-1"></i>
                            Your ticket ID can be found in your submission confirmation
                        </small>
                    </div>

                    <div class="text-center">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-search me-2"></i>Track Repair
                        </button>
                        <a href="/" class="btn btn-outline-secondary ms-2">
                            <i class="fas fa-plus me-2"></i>New Request
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const form = document.querySelector('form');
    form.addEventListener('submit', function(event) {
        if (!form.checkValidity()) {
            event.preventDefault();
            event.stopPropagation();
        }
        form.classList.add('was-validated');
    });
});
</script>